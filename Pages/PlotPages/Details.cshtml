@page
@model WebProgProject.Pages.PlotPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Plot</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plot.plotNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plot.plotNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plot.location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plot.location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plot.notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plot.notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Plot.CemID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Plot.CemID)
        </dd>
    </dl>
    <ul>
        @{ foreach (WebProgProject.Models.Cemetary cem in Model.Plot.Cemetaries)
            {
                <li>@cem.name</li>
                <li>@cem.address</li>
                <li>@cem.Pictures</li>
            }
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Plot.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
