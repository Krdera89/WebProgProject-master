@page
@model WebProgProject.Pages.CemetaryPages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cemetary</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cemetary.name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cemetary.name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cemetary.address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cemetary.address)
        </dd>
    </dl>
    <ul>
        @{ foreach (WebProgProject.Models.Plot p in Model.Cemetary.Plots)
            {
                <li>@p.plotNumber</li>
                <li>@p.location</li>
                <li>@p.Cemetaries</li>
                <li>@p.Pictures</li>
            }
        }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Cemetary.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
