@page
@model WebProgProject.Pages.PicturePages.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Picture</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.notes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Picture.notes)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Picture.picPath)
        </dt>
        <dd class="col-sm-10">
           <iframe src="@Html.DisplayFor(model => model.Picture.picPath)" height="500" width="650"/>
        </dd>
    </dl>
    <ul>
        @{ foreach (WebProgProject.Models.Person p in Model.Picture.Persons)
            {
                <li>@p.Name</li>
            }

        }
    </ul>
    <ul>
        @{ foreach(WebProgProject.Models.Plot plo in Model.Picture.Plots)
            {
                <li>@plo.plotNumber</li>
                <li>@plo.location</li>
            } 
            }
    </ul>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Picture.id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
